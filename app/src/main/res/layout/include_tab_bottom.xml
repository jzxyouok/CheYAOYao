<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    android:id="@+id/rg_tab"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp120"
    android:background="@color/rg_background"
    android:orientation="horizontal">

    <RadioButton
        android:checked="true"
        android:id="@+id/rb_home"
        style="@style/tab_bottom"
        android:drawableTop="@drawable/ic_tab_main_selector"
        android:text="首页"
        />
    <RadioButton
        android:id="@+id/rb_movie"
        style="@style/tab_bottom"
        android:drawableTop="@drawable/ic_tab_movie_selector"
        android:text="视频"
        />
    <RadioButton
        android:id="@+id/rb_chat"
        style="@style/tab_bottom"
        android:drawableTop="@drawable/ic_tab_chat_selector"
        android:text="聊天"
        />
    <RadioButton
        android:id="@+id/rb_shequ"
        style="@style/tab_bottom"
        android:drawableTop="@drawable/ic_tab_shequ_selector"
        android:text="社区"
        />
    <RadioButton
        android:id="@+id/rb_mine"
        style="@style/tab_bottom"
        android:drawableTop="@drawable/ic_tab_mine_selector"
        android:text="我的"
        />
</RadioGroup>